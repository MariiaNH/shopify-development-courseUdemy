<section class="inner-hero-section">
  {% if section.settings.image != blank %}
    <img src="{{ section.settings.image | img_url: "large" }}">
    {% else %}
    {% capture current %}{% cycle 1,2 %}{% endcapture %}
    {{ 'lifestyle-' | append: current | placeholder_svg_tag: 'placeholder-svg' | img_url: "large" }}
  {% endif %}
  <div class="container py-5">
    <div class="row">
      <div class="col-lg-6 col-md-8 mx-auto">
        <h1>{{ section.settings.title }}</h1>
        <p>{{ section.settings.description }}</p>
        <a href="{{ section.settings.button_link }}" class="btn btn-secondary">{{ section.settings.button_label }}</a>
      </div>
    </div>
  </div>
</section>


{% schema %}
{
  "name": "Hero",
  "class": "hero-section",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Heading background title"
    },
    {
      "type": "text",
      "id": "title",
      "default": "Example heading",
      "label": "Heading title"
    },
    {
      "type": "richtext",
      "id": "description",
      "default": "<p>Example Paragraph</p>",
      "label": "Heading description"
    },
    {
      "type": "text",
      "id": "button_label",
      "default": "Button",
      "label": "Heading Button Label"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Heading Button Link"
    }
  ],
  "presets": [
    {
      "category": "Hero",
      "name": "Simple Hero"
    }
  ]
}
{% endschema %}
